<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background='@drawable/inst'>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title of screen added -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/helveticaneue"
                android:text="INSTRUCTIONS"
                android:textColor="#ca010c"
                android:textSize="30sp" />

            <!-- Linear Layout to hold inst -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:background='@drawable/instpopup' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="1. Follow the instructions on the popup."
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <!-- Linear Layout to hold inst -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:background='@drawable/instbutton' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="2. Use either swipe or the buttons to move link/zelda around."
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <!-- Linear Layout to hold inst -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:background='@drawable/instbutton2' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="3. Use these buttons to undo a move or reset a level."
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <!-- Linear Layout to hold inst -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:background='@drawable/instheart' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="4. Be careful of things that might kill you! Things like water, fire, holes."
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <!-- Linear Layout to hold inst -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:background='@drawable/instcoins' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="4. Collect coins on your way!"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <!-- Play Button added here -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#FDFD96"
                android:onClick="instplay"
                android:text="PLAY" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>