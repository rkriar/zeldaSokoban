<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Image that appears in spinner-->
    <ImageView
        android:id="@+id/image_view_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/link_charsel" />

    <!--Name that appears beside the image-->
    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_char"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_toEndOf="@+id/image_view_char"
        android:layout_toRightOf="@+id/image_view_char"
        android:gravity="center"
        android:text="Link"
        android:textColor="#000000"
        android:textSize="28sp" />
</RelativeLayout>